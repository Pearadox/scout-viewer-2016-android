<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.citruscircuits.scout_viewer_2016_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ViewerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".team_details.TeamDetailsActivity"
            android:label="@string/title_activity_team_details" />
        <activity
            android:name=".match_details.MatchDetailsActivity"
            android:label="@string/title_activity_match_details" />
        <activity
            android:name=".RankingsActivity"
            android:label="@string/title_activity_rankings"></activity>
    </application>

</manifest>
