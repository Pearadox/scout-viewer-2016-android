<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".match_details.MatchDetailsActivity">

    <RelativeLayout
        android:id="@+id/matchDetailsMatchNumberLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/matchDetailsMatchTitleTextView"
            android:layout_alignTop="@+id/matchDetailsMatchTitleTextView"
            android:layout_toLeftOf="@+id/matchDetailsMatchTitleTextView">
            <TextView
                android:id="@+id/redAllianceScore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="1678"
                android:textColor="#FF0000"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/redAlliancePredictedScore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#FF0000"
                android:layout_weight="1"
                android:text="1678"
                android:gravity="center"/>

            <TextView
                android:id="@+id/redAllianceWinChance"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#FF0000"
                android:text="16%"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@id/matchDetailsMatchTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="75sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Q7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/matchDetailsMatchTitleTextView"
            android:layout_alignTop="@+id/matchDetailsMatchTitleTextView"
            android:layout_toRightOf="@+id/matchDetailsMatchTitleTextView">
            <TextView
                android:id="@+id/blueAllianceScore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="1678"
                android:textColor="#0000ff"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/blueAlliancePredictedScore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#0000ff"
                android:layout_weight="1"
                android:text="1678"
                android:gravity="center"/>

            <TextView
                android:id="@+id/blueAllianceWinChance"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#0000ff"
                android:text="16%"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/matchDetailsMatchNumberLinearLayout"
       >

        <LinearLayout
            android:id="@+id/matchDetailsRedTeamsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/matchDetailsBlueTeamsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/redTeamsDefenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/blueTeamsDefenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal">
    </LinearLayout>


</RelativeLayout>
